.row
  .page-header
    %h2=link_to "Show #{@event.name}", root_path
.container
  .row
    .well
      %h4 Event description
      %p= @event.description
    .col-lg-6
      %table.table.table-hover.custom-table
        %thead
          %th Participant name
          %th.pull-right Participant payment
        %tbody
          - @event.participants.each do |participant|
            %tr 
              %td= participant.full_name
              %td.pull-right= number_to_currency(participant.payments.for_budget(@event.budget).first.amount, unit: "â‚´",format: "%n %u")
          %tr
            %td
              %h3 Total amount
            %td.pull-right
              %h3= @event.budget.amount
    .container
      .col-lg-6
        .form.form-group
          .form-inputs.col-md-6.col-md-offset-3.well
            = simple_form_for @payment, url: payment_path(@payment), method: :patch do |f|
              = f.input :amount
              = f.button :submit, "Pay", class: "btn-primary"

.row
  .page-header
    %h2 New event
.container
  .form.form-group
    .form-inputs.col-md-6.col-md-offset-3.well
      = simple_form_for @event, method: :post do |f|
        = f.input :name, required: true, placeholder: "Name", class: 'form-control'
        = f.input :description, required: true, placeholder: "Few words about event"
        = f.input :paid_type, as: :radio_buttons, collection: ['free', 'paid'], item_wrapper_class: 'radio-inline', label_html: { class: "inline"}
        = f.simple_fields_for :budget, @event.budget || @event.build_budget do |ff|
          = ff.input :amount, required: true
        = f.input :default_amount, as: :boolean
        = f.input :date, as: :date
        = f.association :participants, label_method: :full_name, value_method: :id, include_blank: false
        = f.input :select_all, as: :boolean
        = f.button :submit, 'Create event', class: "btn-primary"
        .pull-right
          =link_to 'Back', :back, class: "btn btn-default"

.row
  = render 'admin/admin_bar'
  .hpanel
    .panel-body
      %table.table
        %thead
          %tr
            %th=sort_link "email"
            %th=sort_link "updated_at", "Expired"
            %th.right-align Actions
        %tbody
          - @invitations.each do |invitation|
            %tr{ class: "#{'expired' if invitation.will_expired? }"}
              %td= invitation.email
              %td= invitation.expired.localtime.strftime("%d.%m.%Y at %T")
              %td.right-align.glyphicon-margin
                =link_to '', admin_invitation_path(invitation), method: :patch, remote: true, class: "glyphicon glyphicon-send"
                =link_to '', admin_invitation_path(invitation), method: :delete, class: "glyphicon glyphicon-trash"

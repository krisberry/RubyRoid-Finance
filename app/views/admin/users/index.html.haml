.row
  .page-header
    %div.col-lg-12
      %h2 Users
    = render 'admin/admin_bar'
  %br/
  %table.table.table-hover.table-responsive.custom-table
    %thead
      %tr
        %th Image
        %th=sort_link ["first_name", "last_name"], "Full name"
        %th=sort_link "email"
        %th=sort_link "birthday"
        %th.pull-right Action
    %tbody
      - @users.each do |user|
        %tr
          %td= image_tag user.image.photo.url(:mini), class: "thumbnail"
          %td= user.full_name
          %td= user.email
          %td= user.birthday.strftime('%d-%m-%Y')
          %td.pull-right
            =link_to '', "#", class: "btn btn-info glyphicon glyphicon-eye-open"
            =link_to '', edit_user_registration_path, class: "btn btn-warning glyphicon glyphicon-pencil"
            =link_to '', "#", class: "btn btn-danger glyphicon glyphicon-trash"
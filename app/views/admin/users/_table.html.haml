%table.table
  %thead
    %tr
      %th Event
      %th Date
      %th Type
      %th.right-align Actions
  %tbody
    - events.each do |event|
      - if event.paid? && user
        - payment = event.payments.for_user(user.id)
      %tr{id: (dom_id(payment, :row) if payment)}
        %td= event.name
        %td= event.date.strftime('%d.%m.%Y')
        %td= event.paid_type
        %td.right-align.glyphicon-margin
          - if payment
            =link_to '', pay_for_event_admin_user_path(payment), method: :patch, remote: true, toggle: "tootip", title: "Pay for event", class: "glyphicon glyphicon-circle-arrow-down"
          =link_to '', admin_event_path(event), toggle: "tootip", title: "Show event details", class: "glyphicon glyphicon-eye-open"
          =link_to '', edit_admin_event_path(event), toggle: "tootip", title: "Edit event", class: "glyphicon glyphicon-pencil"
          =link_to '', admin_event_path(event), method: :delete, toggle: "tootip", title: "Delete event", class: "glyphicon glyphicon-trash"
%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
      - if current_user && current_user.admin?
        = link_to 'RubyRoidFinance', admin_root_path, class: 'navbar-brand'
      - else
        = link_to 'RubyRoidFinance', authenticated_root_path, class: 'navbar-brand'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to "#{current_user.full_name}", edit_user_registration_path
          %li
            = link_to '', chat_path, toggle: "tooltip", title: "Chat", class: "glyphicon glyphicon-envelope"
          %li
            = link_to '', destroy_user_session_path, method: :delete, toggle: "tooltip", title: "Logout", class: "glyphicon glyphicon-log-out"

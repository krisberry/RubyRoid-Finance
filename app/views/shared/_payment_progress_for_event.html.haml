.hpanel.stats
  .panel-body.h-200
    .stats-title.pull-left
      %h4 Payments activity
    .stats-icon.pull-right
      %i.glyphicon.glyphicon-piggy-bank.gi-3x
    .m-t-xl
      %h3.m-b-xs= @event.budget.amount
      %span.font-bold.no-margins
        Event amount
      .progress.m-t-xs.full.progress-small
        .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{@paid_percent}", :role => "progressbar", :style => "width: #{@paid_percent}%"}
      .row
        .col-xs-6
          %small.stats-label Balance
          %h4= @balance_to_paid
        .col-xs-6
          %small.stats-label % Paid
          %h4= "#{@paid_percent}%"
